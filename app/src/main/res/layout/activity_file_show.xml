<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.hht.filebrowser.view.PicturePager
        android:id="@+id/id_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></com.hht.filebrowser.view.PicturePager>

    <LinearLayout
        android:id="@+id/suspend_menu"
        android:layout_width="840dp"
        android:layout_height="113dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:background="@drawable/image_browser_operation_bg"
        android:orientation="vertical"
        android:visibility="gone">

        <Gallery
            android:id="@+id/gallery"
            android:layout_width="830dp"
            android:layout_height="78dp"
            android:gravity="center"></Gallery>

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="830dp"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/operation_exit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_media_exit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="@string/image_loader_exit"
                    android:textColor="#0c96f1"
                    android:textSize="9.3sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/operation_rotation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_image_rotation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="@string/image_loader_rotate"
                    android:textColor="@color/file_date_color"
                    android:textSize="9.3sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/operation_print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_image_print" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:background="@color/transparent"
                    android:text="打印"
                    android:textColor="#0c96f1"
                    android:textSize="9.3sp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>