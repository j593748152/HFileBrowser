<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/open_dialog_padding"
    android:paddingRight="@dimen/open_dialog_padding" >

    <HorizontalScrollView
        android:id="@+id/dialog_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/open_dialog_bg"
        android:scrollbarThumbHorizontal="@drawable/scrollbar_thumb"
        android:fillViewport="true"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarSize="@dimen/open_dialog_scrollbar_size"
        android:scrollbars="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="0dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/spacer_medium"
            android:orientation="horizontal"
            android:showDividers="middle" >
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>